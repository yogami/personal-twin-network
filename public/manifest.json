{
    "name": "Personal Digital Twin",
    "short_name": "MyTwin",
    "description": "Your AI twin lives on your phone. Finds perfect matches. Zero server data.",
    "start_url": "/",
    "scope": "/",
    "display": "standalone",
    "display_override": [
        "window-controls-overlay",
        "standalone"
    ],
    "background_color": "#0a0a0f",
    "theme_color": "#667eea",
    "orientation": "portrait-primary",
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "icons": [
        {
            "src": "/icons/icon-192.svg",
            "sizes": "192x192",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        },
        {
            "src": "/icons/icon-512.svg",
            "sizes": "512x512",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        }
    ],
    "shortcuts": [
        {
            "name": "View Matches",
            "short_name": "Matches",
            "description": "See your top matches",
            "url": "/dashboard?tab=matches",
            "icons": [
                {
                    "src": "/icons/icon-192.svg",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Scan QR",
            "short_name": "Scan",
            "description": "Join an event",
            "url": "/dashboard?tab=scan",
            "icons": [
                {
                    "src": "/icons/icon-192.svg",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "share_target": {
        "action": "/share-target",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "name",
            "text": "description",
            "url": "link"
        }
    },
    "categories": [
        "social",
        "productivity",
        "personalization"
    ],
    "screenshots": [
        {
            "src": "/screenshots/dashboard.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Twin Dashboard"
        }
    ],
    "related_applications": [],
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 400
    }
}